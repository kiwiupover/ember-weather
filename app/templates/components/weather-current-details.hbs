<div class="current-details">
  <div class="temp-date">
    <div class="temp">
      {{weather.tempF}}
      &deg;
    </div>
    <div class="display-date">
      {{displayDate}}
    </div>
  </div>
  <div class="icon-wind">
    <div class="large-icon">
      {{icon-name weather.icon}}
    </div>
    <div class="wind-direction">
      <span class='speed'>
        {{weather.windGustMph}}mph
      </span>
      <span class='direction'>
        {{weather-vane windDegrees=weather.windDegrees}}
      </span>
    </div>
  </div>
</div>
